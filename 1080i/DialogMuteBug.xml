<window>
    <defaultcontrol>-</defaultcontrol>
    <zorder>5</zorder>
    <controls>
        <control type="group">
            <visible>Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)</visible>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" />
                <effect type="slide" start="50" end="0" time="300" tween="sine" easing="inout" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
                <effect type="slide" start="0" end="50" time="200" tween="sine" easing="inout" />
            </animation>
            <animation type="Visible">
                <effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" />
                <effect type="slide" start="50" end="0" time="300" tween="sine" easing="inout" />
            </animation>
            <animation type="Hidden">
                <effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
                <effect type="slide" start="0" end="50" time="200" tween="sine" easing="inout" />
            </animation>

            <control type="image">
                <posx>1721</posx>
                <posy>38</posy>
                <width>118</width>
                <height>118</height>
                <bordertexture border="40">arctic/common/border-20.png</bordertexture>
                <bordersize>20</bordersize>
                <texture border="25">arctic/common/whitepanel8.png</texture>
                <aspectratio>stretch</aspectratio>
                <colordiffuse>bbeeeeee</colordiffuse>
            </control>
            <control type="image">
                <description>Mute image</description>
                <posx>1730</posx>
                <posy>47</posy>
                <width>100</width>
                <height>100</height>
                <texture>overlays/volume/muted-info.png</texture>
            </control>
        </control>
    </controls>
</window>