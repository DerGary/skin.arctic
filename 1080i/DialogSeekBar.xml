<window>
    <defaultcontrol>23</defaultcontrol>
    <visible>Window.IsActive(fullscreenvideo) + [Player.ShowInfo | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsActive(videoosd) | Window.IsVisible(fullscreeninfo)] + !Window.IsVisible(sliderdialog) + ![!Window.IsActive(videoosd) + [Window.IsActive(script-XBMC-Subtitles-main.xml) | Window.IsActive(pvrguideinfo) | Window.IsActive(pvrosdchannels) | Window.IsActive(pvrosdguide) | Window.IsActive(yesnodialog) | Window.IsActive(okdialog) | Window.IsActive(progressdialog) | Window.IsActive(virtualkeyboard) | Window.IsActive(numericinput) | Window.IsActive(shutdownmenu) | Window.IsActive(osdvideosettings) | Window.IsActive(osdaudiosettings) | Window.IsActive(videobookmarks)]]</visible>
    <controls>
        <include>OSDWeatherClock</include>
        <include condition="VideoPlayer.Content(Movies)">OSDChapterInfo</include>

        <!-- SHOW INFO -->
        <control type="group">
			<visible>[Player.ShowInfo | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsActive(videoosd) | Window.IsVisible(fullscreeninfo)]</visible>
			<animation type="Visible" reversible="false">
				<effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" delay="150" />
			</animation>
			<animation type="Hidden" reversible="false">
				<effect type="fade" start="100" end="0" time="200" tween="sine" easing="out" />
			</animation>
			<animation effect="slide" end="0,-55" time="300" tween="cubic" easing="inout" condition="Window.IsActive(videoosd)">Conditional</animation>
			
			<posx>-354</posx>
			<posy>760</posy>
			<!-- Clear Logo Group -->
			<control type="group">
				<control type="image">
					<posx>539</posx>
					<posy>-40</posy>
					<width>1547</width>
					<height>325</height>
					<texture border="24">arctic/osd/panel.png</texture>
					<colordiffuse>ffbbbbbb</colordiffuse>
				</control>
				<control type="image">
					<posx>475</posx>
					<posy>-104</posy>
					<width>1675</width>
					<height>453</height>
					<texture border="80">arctic/common/border-64.png</texture>
				</control>
				<control type="image">
					<posx>825</posx>
					<posy>212</posy>
					<width>100</width>
					<height>100</height>
					<texture>overlays/nowplaying/play.png</texture>
					<colordiffuse>ff00cf18</colordiffuse>
					<visible>Player.Playing</visible>
				</control>
				<control type="image">
					<posx>825</posx>
					<posy>212</posy>
					<width>100</width>
					<height>100</height>
					<texture>overlays/nowplaying/pause.png</texture>
					<colordiffuse>ff00cf18</colordiffuse>
					<visible>Player.Paused</visible>
				</control>
				<control type="label">
					<posx>865</posx>
					<posy>243</posy>
					<width>661</width>
					<label>»</label>
					<font>Font-Alaska-S45-BL</font>
					<textcolor>ff00cf18</textcolor>
					<scroll>false</scroll>
					<align>left</align>
					<visible>Player.Forwarding</visible>
				</control>	
				<control type="label">
					<posx>865</posx>
					<posy>243</posy>
					<width>661</width>
					<label>«</label>
					<font>Font-Alaska-S45-BL</font>
					<textcolor>ff00cf18</textcolor>
					<scroll>false</scroll>
					<align>left</align>
					<visible>Player.Rewinding</visible>
				</control>	
				<control type="progress">
					<posx>900</posx>
					<posy>251</posy>
					<width>940</width>
					<height>24</height>
					<info>Player.Progress</info>
					<reveal>true</reveal>
					<texturebg>osd/fullscreen/progress/back.png</texturebg>
					<midtexture>osd/fullscreen/progress/mid.png</midtexture>
					<lefttexture>osd/fullscreen/progress/left.png</lefttexture>
					<righttexture>osd/fullscreen/progress/right.png</righttexture>
					<overlaytexture>-</overlaytexture>
				</control>
				<control type="label">
					<posx>1860</posx>
					<posy>249</posy>
					<width>210</width>
					<label>$INFO[Player.Time(hh:mm:ss)]</label>
					<font>Font-Alaska-S25-L</font>
					<textcolor>bbwhite</textcolor>
					<scroll>false</scroll>
					<align>left</align>
				</control>	
				<control type="label">
					<posx>1861</posx>
					<posy>249</posy>
					<width>210</width>
					<label>•</label>
					<font>Font-Alaska-S25-L</font>
					<textcolor>bbwhite</textcolor>
					<scroll>false</scroll>
					<align>center</align>
				</control>	
				<control type="label">
					<posx>2070</posx>
					<posy>249</posy>
					<width>210</width>
					<label>$INFO[Player.Duration(hh:mm:ss)]</label>
					<font>Font-Alaska-S25-L</font>
					<textcolor>bbwhite</textcolor>
					<scroll>false</scroll>
					<align>right</align>
				</control>	
				<control type="image">
					<description>Thumb</description>
					<posx>570</posx>
					<posy>-15</posy>
					<width>257</width>
					<height>257</height>
					<texture background="true">$INFO[Player.Art(thumb)]</texture>
					<aspectratio scalediffuse="false" align="center">keep</aspectratio>
					<visible>VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="group">
					<visible>!VideoPlayer.Content(LiveTV) + !Skin.HasSetting(videoosd.showposter)</visible>
					<control type="image">
						<description>Thumb</description>
						<posx>565</posx>
						<posy>-15</posy>
						<width>257</width>
						<height>257</height>
						<texture background="true">$INFO[Player.Art(clearlogo)]</texture>
						<aspectratio scalediffuse="false" align="center">keep</aspectratio>
						<visible>!VideoPlayer.Content(episodes)</visible>
					</control>
					<control type="image">
						<description>Thumb</description>
						<posx>565</posx>
						<posy>-15</posy>
						<width>257</width>
						<height>257</height>
						<texture background="true">$INFO[Player.Art(tvshow.clearlogo)]</texture>
						<aspectratio scalediffuse="false" align="center">keep</aspectratio>
						<visible>VideoPlayer.Content(episodes)</visible>
					</control>
				</control>
				<control type="group">
					<visible>!VideoPlayer.Content(LiveTV) + [Skin.HasSetting(videoosd.showposter) | [VideoPlayer.Content(episodes) + IsEmpty(Player.Art(tvshow.poster)] | [!VideoPlayer.Content(episodes) + IsEmpty(Player.Art(poster)]]</visible>
					<control type="image">
						<posx>549</posx>
						<posy>-285</posy>
						<width>280</width>
						<height>290</height>
						<texture background="true" fallback="osd/fullscreen/cd.png">$INFO[Player.Art(discart)]</texture>
						<aspectratio align="center">keep</aspectratio>
						<animation effect="rotate" center="auto" reversible="false" start="360" end="0" time="2500" loop="true" condition="Player.Playing">Conditional</animation>
						<animation effect="slide" start="395" end="0" time="350">Visible</animation>
						<visible>Skin.HasSetting(CDArt.Enabled)</visible>
					</control>
					<control type="image">
						<description>Thumb</description>
						<posx>475</posx>
						<posy>-214</posy>
						<width>428</width>
						<height>578</height>
						<texture background="true" border="128">arctic/common/16border64.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<description>Thumb</description>
						<posx>539</posx>
						<posy>-150</posy>
						<width>300</width>
						<height>450</height>
						<texture background="true" diffuse="arctic/osd/poster.png">$VAR[ArcticOSDPoster]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
					</control>
				</control>
				<control type="group">
					<include>visiblehidefadeinfo</include>
					<!-- FLAGS -->
					<control type="grouplist">
						<posx>1765</posx>
						<posy>5</posy>
						<width>300</width>
						<orientation>horizontal</orientation>
						<itemgap>10</itemgap>
						<align>right</align>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>35</width>
							<height>28</height>
							<colordiffuse>mod-infotags-d</colordiffuse>
							<texture>flags/other/3d-osd.png</texture>
							<include>visiblehidefadeflags</include>
							<visible>substring(Player.FileNameAndPath,.3D.) | substring(Player.FileNameAndPath,-3D.)</visible>
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>84</width>
							<height>28</height>
							<colordiffuse>mod-infotags-d</colordiffuse>
							<texture>$INFO[VideoPlayer.VideoResolution,flags/res/osd/,.png]</texture>
							<include>visiblehidefadeflags</include>
							<visible>!IsEmpty(VideoPlayer.VideoResolution)</visible>
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>68</width>
							<height>28</height>
							<colordiffuse>mod-infotags-d</colordiffuse>
							<texture>$INFO[VideoPlayer.AudioCodec,flags/audio/osd/,.png]</texture>
							<include>visiblehidefadeflags</include>
							<visible>!IsEmpty(VideoPlayer.AudioCodec)</visible>
						</control>
					</control>
					<!-- INFO -->
					<control type="group">
						<posy>5</posy>
						<posx>865</posx>
						<animation type="Visible" reversible="false">
							<effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" delay="150" />
						</animation>
						<animation type="Hidden" reversible="false">
							<effect type="fade" start="100" end="0" time="200" tween="sine" easing="out" />
						</animation>
						<visible>IsEmpty(Window(seekbar).Property(ExtendPlot))</visible>
						<control type="label">
							<posx>0</posx>
							<posy>4</posy>
							<width>1100</width>
							<label>$VAR[OSDTitle]</label>
							<font>Font-Alaska-S34-BL</font>
							<textcolor>mod-infotags-d</textcolor>
							<shadowcolor>22ffffff</shadowcolor>
							<scroll>false</scroll>
							<align>left</align>
						</control>
						<control type="button">
							<posx>0</posx>
							<posy>34</posy>
							<width>1201</width>
							<label>$INFO[VideoPlayer.Year]$INFO[VideoPlayer.Genre, • ,]</label>
							<label2>$INFO[VideoPlayer.Rating, ★ ,]</label2>
							<font>Font-Alaska-S25-L</font>
							<textcolor>mod-infotags</textcolor>
							<shadowcolor>22ffffff</shadowcolor>
							<scroll>false</scroll>
							<align>left</align>
							<visible>!VideoPlayer.Content(LiveTV) + !VideoPlayer.Content(episodes)</visible>
						</control>	
						<control type="button">
							<posx>0</posx>
							<posy>34</posy>
							<width>1201</width>
							<label>$INFO[VideoPlayer.Season,$LOCALIZE[20373] , • ]$INFO[VideoPlayer.Episode,$LOCALIZE[20359] ,]$INFO[VideoPlayer.TVShowTitle, • ,]</label>
							<label2>$INFO[VideoPlayer.Rating, ★ ,]</label2>
							<font>Font-Alaska-S25-L</font>
							<textcolor>mod-infotags</textcolor>
							<shadowcolor>22ffffff</shadowcolor>
							<scroll>false</scroll>
							<align>left</align>
							<visible>VideoPlayer.Content(episodes)</visible>
						</control>	
						<control type="button">
							<posx>0</posx>
							<posy>34</posy>
							<width>1201</width>
							<label>$INFO[VideoPlayer.ChannelNumber,$LOCALIZE[19029] ,]$INFO[VideoPlayer.ChannelName, • ,]</label>
							<label2>$INFO[VideoPlayer.Rating, ★ ,]</label2>
							<font>Font-Alaska-S25-L</font>
							<textcolor>mod-infotags</textcolor>
							<shadowcolor>22ffffff</shadowcolor>
							<scroll>false</scroll>
							<align>left</align>
							<visible>VideoPlayer.Content(LiveTV)</visible>
						</control>		
						<control type="textbox">
							<description>Plot</description>
							<posx>0</posx>
							<posy>76</posy>
							<width>1200</width>
							<height>124</height>
							<label>[B]$LOCALIZE[207][/B][CR]$VAR[OSDPlot]</label>
							<align>justify</align>
							<textcolor>mod-infotags-d</textcolor>
							<shadowcolor>22ffffff</shadowcolor>
							<autoscroll delay="13000" time="3000" repeat="13000" />
							<font>Font-Alaska-S25-NC</font>
							<visible>VideoPlayer.Content(LiveTV) | [!IsEmpty(VideoPlayer.PlayCount) | [system.getbool(videolibrary.showunwatchedplots) + IsEmpty(VideoPlayer.PlayCount)]]</visible>
						</control>
						<control type="textbox">
							<description>Plot</description>
							<posx>0</posx>
							<posy>76</posy>
							<width>1200</width>
							<height>124</height>
							<label>$LOCALIZE[20370]</label>
							<align>justify</align>
							<textcolor>mod-infotags-d</textcolor>
							<shadowcolor>22ffffff</shadowcolor>
							<autoscroll delay="13000" time="3000" repeat="13000" />
							<font>Font-Alaska-S25-NC</font>
							<visible>!VideoPlayer.Content(LiveTV) + IsEmpty(VideoPlayer.PlayCount) + !system.getbool(videolibrary.showunwatchedplots)</visible>
						</control>
						<control type="label">
							<posx>1200</posx>
							<posy>202</posy>
							<width>661</width>
							<label>$VAR[OSDNextTitle]</label>
							<font>Font-Alaska-S25-L</font>
							<textcolor>mod-infotags</textcolor>
							<shadowcolor>22ffffff</shadowcolor>
							<scroll>false</scroll>
							<align>right</align>
						</control>
					</control>
				</control>
			</control>
		</control>
    </controls>
</window>