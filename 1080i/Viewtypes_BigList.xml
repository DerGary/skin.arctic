						<control type="image">
							<posx>1450</posx>
							<posy>-12</posy>
							<width>100</width>
							<height>100</height>
							<aspect>keepaspect</aspect>
							<texture>$VAR[DefaultListOverlay]</texture>
						</control>
						<!-- Episode Thumb -->
						<control type="image">
							<posx>20</posx>
							<posy>20</posy>
							<width>284</width>
							<height>160</height>
							<texture background="true" diffuse="arctic/list/episode.png">$VAR[ListInfoLandscapeVar]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
