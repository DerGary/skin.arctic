<includes>
<!-- =============== -->
<!-- Music Panel (51)      -->
<!-- =============== -->
    <include name="Viewtype-MusicPanel">
        <control type="group">
            <visible>Control.IsVisible(51) + !Window.IsActive(musicinformation)</visible>
            <include>CommonViewAnimations</include>
            <include>BannerListAnimations</include>
            <include>OptionsShutdownAnimation</include>
            <include>listEndAnimation</include>
            <posx>50</posx>
			<posy>450</posy>
            <control type="image">
                <description>Cover</description>
                <posx>6</posx>
                <posy>6</posy>
                <width>464</width>
                <height>464</height>
                <texture background="true" diffuse="arctic/covers/702.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <fadetime>200</fadetime>
            </control>
            <control type="image">
                <description>Border</description>
                <posx>-4</posx>
                <posy>-4</posy>
                <width>484</width>
                <height>484</height>
                <texture border="25">arctic/common/border.png</texture>
                <aspectratio scalediffuse="false">stretch</aspectratio>
            </control>
            <control type="group">
            	<animation effect="slide" end="-238" condition="">Conditional</animation>
				<control type="image">
					<description>Fanart</description>
					<posx>1196</posx>
					<posy>6</posy>
					<width>614</width>
					<height>464</height>
					<texture background="true" diffuse="arctic/panel/614-464.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$INFO[ListItem.Art(fanart)]</texture>
					<aspectratio scalediffuse="false">scale</aspectratio>
					<fadetime>200</fadetime>
				</control>
				<control type="image">
					<description>Fade</description>
					<posx>1196</posx>
					<posy>6</posy>
					<width>614</width>
					<height>464</height>
					<texture background="true" diffuse="arctic/panel/614-464.png">arctic/common/fade.png</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
				</control>
				<control type="image">
					<description>Border</description>
					<posx>1186</posx>
					<posy>-4</posy>
					<width>634</width>
					<height>484</height>
					<texture border="25">arctic/common/border.png</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
				</control>
				<control type="group">
					<posx>1186</posx>
					<posy>300</posy>
					<control type="label">
						<posx>610</posx>
						<posy>130</posy>
						<width>586</width>
						<label>$INFO[ListItem.Album]</label>
						<font>Font-Alaska-S32-BL</font>
						<textcolor>mod-infotags-alt</textcolor>
						<scroll>false</scroll>
						<align>right</align>
						<visible>Container.Content(Albums)</visible>
					</control>
					<control type="label">
						<posx>610</posx>
						<posy>130</posy>
						<width>586</width>
						<label>$INFO[ListItem.Label]</label>
						<font>Font-Alaska-S32-BL</font>
						<textcolor>mod-infotags-alt</textcolor>
						<scroll>false</scroll>
						<align>right</align>
						<visible>!Container.Content(Albums) | IsEmpty(ListItem.Album)</visible>
					</control>
					<control type="group">
						<visible>![Container(51).OnNext | Container(51).OnPrevious] + Container.Content(Albums)</visible>
						<animation effect="fade" end="100" start="0" time="500" delay="0" reversible="false">Visible</animation>
						<control type="label">
							<description>Tracks</description>
							<posx>24</posx>
							<posy>0</posy>
							<width>293</width>
							<height>124</height>
							<label>$VAR[MusicTracklistVar]</label>
							<align>justify</align>
							<aligny>top</aligny>
							<textcolor>mod-infotags-alt</textcolor>
							<font>Font-Alaska-S25-NC</font>
							<scroll>false</scroll>
							<wrapmultiline>false</wrapmultiline>
						</control>
						<control type="label">
							<description>Tracks Right</description>
							<posx>317</posx>
							<posy>0</posy>
							<width>293</width>
							<height>124</height>
							<label>$VAR[MusicTracklistAltVar]</label>
							<align>justify</align>
							<aligny>top</aligny>
							<textcolor>mod-infotags-alt</textcolor>
							<font>Font-Alaska-S25-NC</font>
							<scroll>false</scroll>
							<wrapmultiline>false</wrapmultiline>
						</control>
						<control type="textbox">
							<description>Plot</description>
							<posx>24</posx>
							<posy>0</posy>
							<width>586</width>
							<height>124</height>
							<label>$VAR[MusicTracklistInfoVar]</label>
							<align>justify</align>
							<textcolor>mod-infotags-alt</textcolor>
							<font>Font-Alaska-S25-NC</font>
						</control>
					</control>
					<control type="textbox">
						<posx>24</posx>
						<posy>0</posy>
						<width>586</width>
						<height>124</height>
						<label>$INFO[ListItem.Property(Artist_Description)]</label>
						<font>Font-Alaska-S25-NC</font>
						<textcolor>mod-infotags-alt</textcolor>
						<align>justify</align>
						<autoscroll delay="13000" time="3000" repeat="13000" />
						<visible>!IsEmpty(ListItem.Property(Artist_Description)) + Container.Content(Artists)</visible>
					</control>
				</control>
			</control>
            
            
            

            <control type="panel" id="51">
				<posx>472</posx>
				<posy>-4</posy>
				<width>714</width>
				<height>476</height>
                <include>FullscreenDimensions</include>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <orientation>horizontal</orientation>
                <viewtype label="Panel">list</viewtype>
                <pagecontrol>70</pagecontrol>
                <ondown>70</ondown>
                <onright>51</onright>
                <onleft>51</onleft>
                <onup>51</onup>
                <preloaditems>2</preloaditems>
                <visible>Container.Content(albums) | Container.Content(artists)</visible>
                <itemlayout width="238" height="238">
                    <control type="image">
                        <description>Poster</description>
                        <posx>10</posx>
                        <posy>10</posy>
                        <width>226</width>
                        <height>226</height>
                        <texture background="true" diffuse="arctic/covers/226.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
                        <aspectratio scalediffuse="false">scale</aspectratio>
                    </control>
                    <control type="image">
                        <description>Border</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>246</width>
                        <height>246</height>
                        <texture border="25">arctic/common/border.png</texture>
                        <colordiffuse>Mod_Border_Fade</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="image">
                        <description>Poster</description>
                        <posx>10</posx>
                        <posy>10</posy>
                        <width>226</width>
                        <height>226</height>
                        <texture border="30">arctic/common/whitepanel.png</texture>
                        <colordiffuse>Mod_Cover_Fade</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                </itemlayout>
                <focusedlayout width="238" height="238">
                    <control type="button">
                        <visible>true</visible>
                        <onfocus>AlarmClock(cycletracklist,null,0:20,silent,loop)</onfocus>
                    </control>
                    <control type="group">
                        <animation effect="zoom" end="100" start="80" time="150" delay="50" center="auto">Focus</animation>
                        <control type="image">
							<description>Poster</description>
							<posx>10</posx>
							<posy>10</posy>
							<width>226</width>
							<height>226</height>
							<texture background="true" diffuse="arctic/covers/226.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
						</control>
						<control type="image">
							<description>Border</description>
							<posx>0</posx>
							<posy>0</posy>
							<width>246</width>
							<height>246</height>
							<texture border="25">arctic/common/border.png</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>Mod_Border</colordiffuse>
						</control>
						<control type="image">
							<description>Border</description>
							<posx>10</posx>
							<posy>10</posy>
							<width>226</width>
							<height>226</height>
							<texture border="25">arctic/common/border-glo-flat.png</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>Mod_Glow_Border</colordiffuse>
						</control>
					</control>	
                </focusedlayout>
            </control>
        </control>
         <!--Scrollbar-->			
		<control type="scrollbar" id="70">
			<description>Scrollbar</description>
			<width>1920</width>
			<height>26</height>
			<posy>26r</posy>
			<orientation>horizontal</orientation>
			<textureslidernib >arctic/common/slider-nf-h.png</textureslidernib>
			<textureslidernibfocus >arctic/common/slider-fo-h.png</textureslidernibfocus>
			<showonepage>true</showonepage>
			<onup>51</onup>
			<ondown condition="!Skin.HasSetting(KioskMode)">9010</ondown>
			<ondown condition="Skin.HasSetting(KioskMode)">51</ondown>
			<animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="!Control.IsVisible(9772)">Conditional</animation>
			<animation effect="fade" start="40" end="100" time="300" tween="sine" easing="inout" condition="Control.HasFocus(70)">Conditional</animation>
			<animation effect="fade" start="100" end="40" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(70)">Conditional</animation>
			<visible>Control.IsVisible(51)</visible>
		</control>
    </include>    
</includes>